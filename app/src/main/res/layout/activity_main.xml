<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_green">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INSIDE OF "
                android:id="@+id/txtInside"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/txtMobileapp"
                android:textColor="@android:color/white"
                android:text="MOBLIE APP"
                android:textSize="42sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textSize="42sp"
                android:text="DEVERLOPER "
                android:id="@+id/txtDevelop"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/txtProcess"
                android:textColor="@android:color/white"
                android:text="PROCESS"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_report"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_new" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_setting"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_setting_gl" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_suitace"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_suticate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_brush"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_brush"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_rocket"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_rocket"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/bg_item_green"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="LOOKING TO DEVELOP AN APP ?"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="BUT "
                    android:textColor="@android:color/white"
                    android:textSize="42sp" />

                <TextView
                    android:id="@+id/txtDoyouKnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DO YOU KNOW..."
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DEEAD6"
        android:gravity="center"
        android:padding="2dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#DEEAD6"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIt_takes_amost_native"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It takes"
                android:padding="2dp"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 WEEKS"
                android:layout_margin="2dp"
                android:id="@+id/txt18weeks_native"
                android:textColor="#01423E"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to developer"
                android:layout_margin="2dp"
                android:id="@+id/txt_todevelop_native"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:id="@+id/txt_native_mobile_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="NATIVE APP"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It takes"
                android:layout_margin="2dp"
                android:id="@+id/txtIt_takes_backend"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:id="@+id/txt_10_weeks_backend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 WEEKS"
                android:layout_margin="2dp"
                android:textColor="#01423E"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_build_the_backend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to build the"
                android:layout_margin="2dp"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK-END"
                android:layout_margin="2dp"
                android:id="@+id/txt_Back_end"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#DEEAD6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="And"
                android:layout_margin="2dp"
                android:id="@+id/txt_And_front_end"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08 WEEKS"
                android:layout_margin="2dp"
                android:textColor="#01423E"
                android:id="@+id/txt_08_week_front_end"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to biuld the"
                android:layout_margin="2dp"
                android:id="@+id/txt_build_the_front_end"
                android:textColor="@color/bg_item_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRONT-END"
                android:layout_margin="2dp"
                android:id="@+id/txt_Front_end"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="3dp"
        android:padding="2dp"
        android:gravity="center"
        android:background="#C5DED6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#C5DED6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT ALSO"
                android:id="@+id/txt_IT_ALSO_TAKES"
                android:textColor="#01423E"
                android:layout_margin="3dp"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_native_app"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_nativeapp" />

            <TextView
                android:id="@+id/txt_18_WEEKS_NATIVE_APP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="18 WEEKS"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#C5DED6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO PRODUCE"
                android:layout_margin="3dp"
                android:id="@+id/txt_TO_PRODUCE"
                android:textColor="#01423E"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_BACK_END"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_backend" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="168 CARS"
                android:layout_marginTop="7dp"
                android:id="@+id/txt_168_NORMAL_CARS"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#C5DED6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO BUILD"
                android:id="@+id/txt_TO_BIULD_FRONT_END"
                android:textColor="#01423E"
                android:layout_margin="3dp"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_FRONT_END"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_frontend" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE POOLS"
                android:layout_marginTop="7dp"
                android:id="@+id/txt_CONCRETE_POOLS"
                android:textColor="#01423E"
                android:textSize="22sp" />
        </LinearLayout>


    </LinearLayout>
        </LinearLayout>
    </ScrollView>


